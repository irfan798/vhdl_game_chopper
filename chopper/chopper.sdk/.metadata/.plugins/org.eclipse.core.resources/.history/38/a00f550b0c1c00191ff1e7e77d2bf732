/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "xparameters.h"
#include "platform.h"
#include "xil_printf.h"
#include "xgpio.h"
#include "objectbuffer.h"

//#include <stdio.h>
//#include <stdlib.h>
//#include "xparameters.h"
#include "xbasic_types.h"
//#include "xbram.h"
#include "sleep.h"


struct Obje {
 int  x,y,width,height;
 uint32_t  color;
 uint8_t   type;
};

void obje_at(struct Obje o, volatile uint32_t ram[], int start) {

	ram[start] = (o.x<<16) | o.y; // x 100 y 100
	ram[start+1] = (o.width<<16) | o.height; // w 100 h 100
	//ram[start+2] = (o.color<<8) | o.type; // renk + type
	ram[start+2] = o.type << 24 | o.color;
	ram[start+3] = 0x00000008;
}


int main()
{

	int status;
	XGpio btn;

	init_platform();

	print("Initializing Buttons & Switches\n");
	status = XGpio_Initialize(&btn, XPAR_AXI_GPIO_0_DEVICE_ID);
	if (status != XST_SUCCESS) { return XST_FAILURE; }
	// set the direction to input
	XGpio_SetDataDirection(&btn, 1, 0xFF); // Channel 1


	// Make sure XPAR_BRAM_0_BASEADDR is the extra BRAM that you added

	// Writing 32-bits at a time for each address.
	volatile uint32_t *video_bram = (uint32_t *) XPAR_BRAM_0_BASEADDR;




	//USER CODE

	int max_obje = 10;
	int obje_sayisi = 6;
	struct Obje objeler[max_obje];
	struct Obje dallar[5];

	//sabitler
	struct Obje agac_govde;
	agac_govde.x = 265;
	agac_govde.y = 0;
	agac_govde.width = 100;
	agac_govde.height = 720;
	agac_govde.type = 1;
	agac_govde.color = 0x00FF00;


	struct Obje ayirac;
	ayirac.x = 630;
	ayirac.y = 0;
	ayirac.width = 20;
	ayirac.height = 720;
	ayirac.type = 1;
	ayirac.color = 0x000000;


	struct Obje zemin;
	zemin.x = 0;
	zemin.y = 700;
	zemin.width = 1280;
	zemin.height = 20;
	zemin.type = 1;
	zemin.color = 0x00FF00;

	struct Obje can_bari;
	can_bari.x = 65;
	can_bari.y = 20;
	can_bari.width = 500;
	can_bari.height = 26;
	can_bari.type = 1;
	can_bari.color = 0xFF0000;

	struct Obje can_bari_arka;
	can_bari_arka.x = 60;
	can_bari_arka.y = 15;
	can_bari_arka.width = 510;
	can_bari_arka.height = 36;
	can_bari_arka.type = 1;
	can_bari_arka.color = 0x000000;

	struct Obje adam;
	adam.x = 115;
	adam.y = 520;
	adam.width = 200;
	adam.height = 200;
	adam.type = 3;
	adam.color = 0xFF0000;

	struct Obje dal;
	dal.x = 365;
	dal.y = 20;
	dal.width = 250;
	dal.height = 60;
	dal.type = 1;
	dal.color = 0xFFFF00;

	objeler[0] = zemin;
	objeler[1] = ayirac;
	objeler[2] = agac_govde;
	objeler[3] = can_bari_arka;
	objeler[4] = can_bari;
	objeler[5] = adam;


	for(int i=0; i<obje_sayisi; i++) {
		obje_at(objeler[i], video_bram, i*4);
	}

	//Ilk reserved bit e obje sayisini ekle
	video_bram[3] = 11;


	void dallar_render() {
		for(int i=0; i<5; i++) {
			obje_at(dallar[i], video_bram, i*4+24);
		}
	}

	int dal_x_rand() {
		return 15 + (rand() & 1)*350;
	}

	//Dallari olustur
	for(int i=0; i<5; i++) {
		dallar[i].x = 365; //365 sag 15 sol
		dallar[i].y = -580 + i*200;
		dallar[i].width = 250;
		dallar[i].height = 60;
		dallar[i].type = 1;
		dallar[i].color = 0xFFFF00;
	}

	dallar[3].x = 365;
	dallar[4].x = 15;

	dallar_render();

	void dallar_arttir() {
		for(int i=0; i<5; i++) {
			dallar[i].y += 200;
			if (dallar[i].y >= 620) {
				dallar[i].y = -180;
				dallar[i].x = dal_x_rand();
			}
		}
	}


	u32 btn_now = 0;
	u32 btn_prev = 0;

	int toggle = 0;
	int player_1_sag = 0; //0 sol 1 sag

	int sol_anim_counter = 0;

	void anim_kes() {
		if(player_1_sag) adam.type = 6;
		else adam.type = 5;

		dallar_arttir();
	}

	void anim_idle() {
		if(player_1_sag) adam.type = 4;
		else adam.type = 3;
	}

	void adam_sag() {
		player_1_sag = 1;
		adam.x = 315;
	}

	void adam_sol() {
		player_1_sag = 0;
		adam.x = 115;
	}

	void render() {

		objeler[4] = can_bari;
		objeler[5] = adam;

		for(int i=1; i<obje_sayisi; i++) {
			obje_at(objeler[i], video_bram, i*4);
		}
	}





	while(1) {
		btn_prev = btn_now;
		btn_now = XGpio_DiscreteRead(&btn, 1);


		// buton isleri
		if(btn_now == 0) anim_idle();
		if(btn_prev == 0 && btn_now == 8) {
			adam_sol();
			anim_kes();
		}
		if(btn_prev == 0 && btn_now == 4) {
			adam_sag();
			anim_kes();
		}


		if(toggle) adam.color = 0xFF0000;
		else adam.color = 0xFF00FF;


		render();
		usleep(3000);
	}



	cleanup_platform();
	return 0;
}
